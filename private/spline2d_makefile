# Makefile for tspline mex components.
#
# Updated for R2015b
MEXFLAGS = -largeArrayDims
EXT = mexa64

.PHONY: clean all

all: spline2d_green.$(EXT) spline2d_grad.$(EXT)

spline2d_green.$(EXT): spline2d_green.c	
	mex $(MEXFLAGS) $< 

spline2d_grad.$(EXT): spline2d_grad.c	
	mex $(MEXFLAGS) $< 

clean:
	rm -f spline2d_green.$(EXT) spline2d_grad.$(EXT)
